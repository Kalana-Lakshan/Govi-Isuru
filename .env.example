# ====================================
# GOVI-ISURU Production Environment
# ====================================
# Copy this file to .env and fill in your actual values

# ====== DATABASE ======
# Use your MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/govi_isuru?retryWrites=true&w=majority

# ====== AUTHENTICATION ======
# Generate a strong random JWT secret (min 32 characters)
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_long_change_this

# ====== API & SERVICES ======
# Your deployed application URL
APP_URL=https://yourdomain.com

# News API Key (get from newsapi.org)
NEWS_API_KEY=your_newsapi_key_here

# ====== EMAIL NOTIFICATIONS ======
# Gmail: Use App Password (not regular password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# Or use SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# ====== OPTIONAL: AI SERVICE ======
# If running AI service separately
AI_SERVICE_URL=http://ai-service:8000

# ====== LOGGING ======
NODE_ENV=production
LOG_LEVEL=info

# ====== SECURITY ======
# Set to true in production
SECURE_COOKIES=true
CORS_ORIGIN=https://yourdomain.com
